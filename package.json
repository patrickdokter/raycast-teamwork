{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "teamwork-projects",
  "title": "teamwork-projects",
  "description": "Teamwork extension for Teamworks Projects",
  "icon": "command-icon.png",
  "author": "Patrick Dokter",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "listProjects",
      "title": "List projects",
      "description": "List all projects from Teamwork",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "description": "Your Teamwork projects endpoint",
      "name": "endpoint",
      "placeholder": "See tinyurl.com/raycast-slack-status",
      "required": true,
      "title": "Teamwork endpoint",
      "type": "textfield" 
    },
    {
      "description": "Your Teamwork access token",
      "name": "accessToken",
      "placeholder": "See tinyurl.com/raycast-slack-status",
      "required": true,
      "title": "Access Token",
      "type": "password"
    } 
  ],
  "dependencies": {
    "@raycast/api": "^1.52.0",
    "@raycast/utils": "^1.7.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
